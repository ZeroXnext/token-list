{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "composite": true,
    "module": "NodeNext",
    "target": "ES2023",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "paths": {
      "@utils": ["src/utils.ts"],
      "@types": ["src/types.ts"],
      "@helpers/*": ["src/helpers/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "0xlist.config.ts",
    "bin/*.ts"
  ],
}
