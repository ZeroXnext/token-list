{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2023",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noEmit": false,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@utils": [
        "utils/index.ts"
      ],
      "@types": [
        "types.ts"
      ],
      "@constants": [
        "constants.ts"
      ],
      "@helpers": [
        "helpers/index.ts"
      ]
    }
  },
  "include": [
    "./schemas/*.json",
    "./src/**/*"
  ]
}
