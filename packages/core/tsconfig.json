{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2023",
    "declarationDir": "dist",
    "composite": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@utils": ["src/utils.ts"],
      "@types": ["src/types.ts"],
      "@constants": ["src/constants.ts"],
      "@helpers": ["src/helpers/index.ts"]
    }
  },
  "include": [
    "src/**/*",
  ],
  "references": [
    {
      "path": "tsconfig.jest.json"
    }
  ]
}
