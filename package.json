{
  "name": "tokenlist-builder",
  "packageManager": "yarn@4.11.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "core:add": "yarn workspace @tokenlist-builder/core add",
    "cli:add": "yarn workspace @tokenlist-builder/cli add",
    "core:rm": "yarn workspace @tokenlist-builder/core remove",
    "cli:rm": "yarn workspace @tokenlist-builder/cli remove",
    "build": "turbo build",
    "test": "turbo test",
    "cli:dev": "yarn workspace @tokenlist-builder/cli dev",
    "cli:test": "yarn workspace @tokenlist-builder/cli test"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "turbo": "^2.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
