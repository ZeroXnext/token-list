{
  "name": "0xlist",
  "packageManager": "yarn@4.11.0",
  "workspaces": [
    "packages/*",
    "presentation/*"
  ],
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "core": "yarn workspace @0xlist/core",
    "cli": "yarn workspace @0xlist/cli",
    "lint": "eslint . --fix",
    "build": "turbo build",
    "test": "turbo test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^30.0.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^8.0.0",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "turbo": "^2.6.0",
    "typescript-eslint": "^8.47.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
